# ===========================================
# Simulateur Loi Jeanbrun - Configuration
# ===========================================

# Database (Neon PostgreSQL)
POSTGRES_URL=postgresql://neondb_owner:xxx@ep-xxx.eu-west-1.aws.neon.tech/neondb?sslmode=require

# Authentication - Better Auth
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=CHANGE_ME_GENERATE_32_CHAR_SECRET

# App URL
NEXT_PUBLIC_APP_URL=https://simuler-loi-fiscale-jeanbrun.fr

# ===========================================
# Stripe (Paiement)
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Price IDs
STRIPE_PRICE_PACK3=price_xxx
STRIPE_PRICE_PACKDUO=price_xxx

# ===========================================
# EspoCRM (Sync Leads + Villes + Programmes)
# ===========================================
# Base URL de l'API EspoCRM (default si non fourni)
ESPOCRM_BASE_URL=https://espocrm.expert-ia-entreprise.fr/api/v1
# Clé API EspoCRM (obligatoire pour activer l'intégration)
ESPOCRM_API_KEY=xxx

# ===========================================
# Calendly (RDV)
# ===========================================
CALENDLY_API_KEY=xxx
CALENDLY_WEBHOOK_SECRET=xxx
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/xxx

# ===========================================
# AI (Optional - pour génération contenu)
# ===========================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=simuler-loi-fiscale-jeanbrun.fr

